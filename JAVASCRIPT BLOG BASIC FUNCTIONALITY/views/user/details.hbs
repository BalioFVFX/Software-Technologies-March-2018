<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <form class="form-horizontal" method="get" action="/user/details">


                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>

                <small class="author">
                    <p>Username: {{user}}</p>
                    <p>Email: {{email}}</p>
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
                </form>
            </article>
        </div>
    </div>
</div>
